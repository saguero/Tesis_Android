<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.prediction.FilteredSchemesActivity" >

    <TextView
        android:id="@+id/textView_presentation_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filtered_title"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_filtered_changeImage"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView_presentation_intro"
        android:layout_toEndOf="@+id/button_filtered_save"
        android:background="@drawable/icon_next"
        android:stateListAnimator="@null" />
    
    <Button
        android:id="@+id/button_filtered_save"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView_presentation_intro"
        android:layout_alignEnd="@+id/spinner_selectScheme"
        android:layout_marginEnd="18dp"
        android:background="@drawable/icon_alert_save"
        android:stateListAnimator="@null" />
    
    <ImageView
        android:id="@+id/imageView_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_filtered_save"
        android:contentDescription="@string/message_alertdialog_ok"
        android:src="@drawable/icon_alert_exception" />

    <Spinner
        android:id="@+id/spinner_selectScheme"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView_display"
        android:layout_below="@+id/imageView_display" />

    <Button
        android:id="@+id/button_nextStep"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/spinner_selectScheme"
        android:layout_toEndOf="@+id/spinner_selectScheme"
        android:background="@drawable/icon_check"
        android:stateListAnimator="@null" />

    

</RelativeLayout>